{
  "name": "divi-custom-modules",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "mini-css-extract-plugin": "^2.7.0",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "clean-css-cli": "^5.6.0"
  },
  "scripts": {
    "start": "webpack --mode development --watch",
    "build": "webpack --mode production && npm run minify-css",
    "minify-css": "cleancss -o styles/style.min.css includes/modules/*/style.css",
    "zip": "npm run build && zip -r divi-custom-modules.zip . -x node_modules/\\* .git/\\* *.log",
    "clean": "rm -rf node_modules package-lock.json"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  },
  "cde": {
    "gettext": "dicm-divi-custom-modules",
    "prefix": "dicm"
  }
}
